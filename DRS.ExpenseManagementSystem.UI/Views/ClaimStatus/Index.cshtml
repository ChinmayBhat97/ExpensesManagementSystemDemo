@model IEnumerable<DRS.ExpenseManagementSystem.UI.Models.ClaimStatusViewModel>
<head>
    @{
        ViewData["Title"] = "Index";
    }

    <style>
        td {
            border: 1px solid #000033;
            text-align: left;
            padding: 2px;
            padding-left: 30px;
        }

        th {
            border: 1px solid #000033;
            text-align: center;
            padding: 2px;
            color: #ffffff;
        }

        tr:nth-child(odd) {
            background-color: #ffffff;
        }
        tr:nth-child(even) {
            background-color: #d9d9d9;
        }

        /* Set the serial number counter to 0 */
        #table {
            counter-reset: serial-number;
        }

            /* Increment the serial number counter */
            /* Display the counter */
            #table td:first-child:before {
                counter-increment: serial-number;
                content: counter(serial-number);
            }

    </style>
</head>


<body style="overflow:auto;background-color:#e6e6ff;">
    <div style="padding-left:300px;">
        <h4 style="color:#000066"><u> <b>Status List </b></u></h4>

        <div style="padding-left:425px;">
            <a asp-action="CreateClaimStatus" class="btn btn-success" style="background-color:#008000;">Add New Status</a>

        </div>
        <br />

        <table class="table" id="table" style="font-family: arial, sans-serif;border-collapse:collapse;width:70%;padding-top:16px;font-size:17px">
            <thead>
                <tr>
                    <th style="background-color:  #404040;">
                        Sl.No
                    </th>
                   @* <th style="background-color: #0000b3;">
                        ID
                    </th>*@
                    <th style="background-color:  #404040;">
                       Type of Claim Status
                    </th>
                    <th style="background-color:  #404040;">Action </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr style="vertical-align:middle;">
                        <td style="padding-left:22px;" width="10%">
                            &nbsp;
                        </td>
                       @* <td style="padding-left:20px;">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>*@
                        <td style="padding-left:10px;">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td style="padding-left:10px;" width="35%">
                            <a asp-action="EditClaimStatus" asp-route-id="@item.Id" type="button" class="btn btn-warning">Edit</a>
                            <a asp-action="DetailsByClaimStatusID" asp-route-id="@item.Id" type="button" class="btn btn-info">View</a>
                            <a asp-action="Delete"  asp-route-id="@item.Id" type="button" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>



