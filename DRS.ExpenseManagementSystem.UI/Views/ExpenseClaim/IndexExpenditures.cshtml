@model IEnumerable<DRS.ExpenseManagementSystem.UI.Models.IndividualExpenditure>
@{
    ViewData["Title"] = "IndexIndividualExpenditure";
}

<head>
<style>
    td {
        border: 1px solid #000033;
        text-align: left;
        padding: 3px;
        padding-left: 30px;
    }

    th {
        border: 1px solid #000033;
        text-align: center;
        padding: 4px;
        color: whitesmoke;
    }

    tr:nth-child(even) {
        background-color: #e6f2ff;
    }
</style>


    </head>
<body>
    <div style="padding-left:150px;">
        <h3 style="color:#000099"><u> <b>Individual Expenditure List </b></u></h3>

        <div style="padding-left:400px;">
            <a asp-action="CreateDepartment" class="btn btn-outline-success">Create New Department</a>
            @*  <button class="btn btn-primary" data-target="#CreateDepartment" data-toggle="modal">Add Department</button>*@
        </div>
        <br />
        <table class="table" style="font-family: arial, sans-serif;border-collapse:collapse;width: 60%;padding-top:10px;">
            <thead>
                <tr>
                    <th style="background-color: #0000b3;">
                        ID
                    </th>
                    <th style="background-color: #0000b3;">
                        Claim ID
                    </th>
                    <th style="background-color: #0000b3;">
                        Expenditure Date
                    </th>
                    <th style="background-color: #0000b3;">
                        Category
                    </th>
                    <th style="background-color: #0000b3;">
                        Expense CategoryID
                    </th>
                    <th style="background-color: #0000b3;">
                        Amount
                    </th>

                    <th style="background-color: #0000b3;">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-left:20px;">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td style="padding-left:30px;">
                            @Html.DisplayFor(modelItem => item.ClaimId)
                        </td>
                        <td style="padding-left:20px;">
                            @Html.DisplayFor(modelItem => item.ExpenditureDate)
                        </td>
                        <td style="padding-left:30px;">
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td style="padding-left:20px;">
                            @Html.DisplayFor(modelItem => item.ExpenseCategoryId)
                        </td>
                        <td style="padding-left:30px;">
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td style="padding-left:30px;">
                            <a asp-action="EditDepartment" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a asp-action="DetailsByDepartmentID" asp-route-id="@item.Id"><i class="fa fa-eye" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
