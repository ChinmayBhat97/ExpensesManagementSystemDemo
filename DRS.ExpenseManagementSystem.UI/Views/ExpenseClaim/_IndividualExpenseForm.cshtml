@model DRS.ExpenseManagementSystem.UI.Models.IndividualExpenditureViewModel

<div id="expenseForm_@ViewData["FormIndex"]">
    <hr />
    <h5>Expense Form @ViewData["FormIndex"]</h5>
    <div class="form-group">
        <label>Expenditure Date</label>
        <input type="date" asp-for="@Model.ExpenditureDate" class="form-control" />
        <span asp-validation-for="@Model.ExpenditureDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" asp-for="@Model.Description" class="form-control" />
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Category</label>
        <input type="text" asp-for="@Model.Category" class="form-control" />
        <span asp-validation-for="@Model.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Amount</label>
        <input type="number" asp-for="@Model.Amount" class="form-control" />
        <span asp-validation-for="@Model.Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Comments</label>
        <input type="text" asp-for="@Model.Comments" class="form-control" />
        <span asp-validation-for="@Model.Comments" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Receipt Number</label>
        <input type="text" asp-for="@Model.ReceiptNumber" class="form-control" />
        <span asp-validation-for="@Model.ReceiptNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Attachment Path</label>
        <input type="text" asp-for="@Model.AttachmentPath" class="form-control" />
        <span asp-validation-for="@Model.AttachmentPath" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Is Approved</label>
        <input type="checkbox" asp-for="@Model.IsApproved" class="form-control" />
        <span asp-validation-for="@Model.IsApproved" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Finance Manager Remarks</label>
        <input type="text" asp-for="@Model.FinanceManagerRemarks" class="form-control" />
        <span asp-validation-for="@Model.FinanceManagerRemarks" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-danger" onclick="removeExpenseForm(@ViewData["FormIndex"])">Remove</button>
    </div>
</div>
