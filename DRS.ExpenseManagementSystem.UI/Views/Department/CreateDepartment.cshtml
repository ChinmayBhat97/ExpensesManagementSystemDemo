@model DRS.ExpenseManagementSystem.UI.Models.DepartmentViewModel

    @{
        ViewData["Title"] = "Create";

    }
  



<body>


<div style="padding-left:245px;">
    <h5 style="color:#000099"> <u><b>Create New Department </b></u>   </h5>
    <br />
    <div class="row">
        <div class="col-md-8">
            <form asp-route="/Department/CreateDepartment">
               @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

                    <div class="form-group">
                        <b>   <label asp-for="Name" class="control-label"></label><span style="color:red;">*</span></b>
                        <input asp-for="Name" class="form-control" required  type="text"  minlength="5" maxlength="50"  placeholder="Type Department Name here."/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                <br />
                <div class="form-group" style="padding-left:400px;">
                   

                    <a asp-action="Index" class="btn  btn btn-secondary">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
                <br />
            </form>
        </div>
    </div>

   @* <div>
        <a asp-action="Index">Back to List</a>
    </div>*@

</div>


</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


