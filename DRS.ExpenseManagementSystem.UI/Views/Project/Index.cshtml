@model IEnumerable<DRS.ExpenseManagementSystem.UI.Models.ProjectViewModel>

<head>
    @{
        ViewData["Title"] = "Projects List";
    }
    <style>
        td {
            border: 1px solid #000033;
            text-align: left;
            padding: 3px;
            padding-left: 30px;
        }

        th {
            border: 1px solid #000033;
            text-align: center;
            padding: 4px;
            color: whitesmoke;
        }

        tr:nth-child(even) {
            background-color: #e6f2ff;
        }
    </style>
</head>



<body>
    <div style="padding-left:50px;"> 
        <h3 style="color:#000099"><u> <b>Projects List </b></u></h3>
  @*  <p>
        <a asp-action="CreateProject">Create New Project</a>
    </p>*@

        <div style="padding-left:850px;">

            <a asp-action="CreateProject" class="btn btn-outline-success">Create New Project</a>
        </div>
        <br />
        <table class="table" style="font-family: arial, sans-serif;border-collapse:collapse;width: 105%;padding-top:6px;">
            <thead>
                <tr>
                    <th style="background-color: #0000b3;">
                        ID
                    </th>
                    <th style="background-color: #0000b3;">
                       EMPID
                    </th>
                    <th style="background-color: #0000b3;">
                       Project Title
                    </th>
                    <th style="background-color: #0000b3;">
                       Description
                    </th>
                    <th style="background-color: #0000b3;">
                        Start Date
                    </th>
                    <th style="background-color: #0000b3;">
                        End Date
                    </th>
                    <th style="background-color: #0000b3;">
                       Client Name
                    </th>
                    <th style="background-color: #0000b3;">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-left:20px;">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td >
                        <td style="padding-left:20px;">
                            @Html.DisplayFor(modelItem => item.EmpId)
                        </td>
                        <td style="padding-left:20px;">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td style="padding-left:20px;">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td style="padding-left:20px;">
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td style="padding-left:20px;">
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td style="padding-left:20px;">
                            @Html.DisplayFor(modelItem => item.Client)
                        </td>
                        <td style="padding-left:20px;">
                          @*  <a asp-action="EditProject" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="DetailsByProjectID" asp-route-id="@item.Id">Details</a> |*@

                            <a asp-action="EditProject" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a asp-action="DetailsByProjectID" asp-route-id="@item.Id"><i class="fa fa-eye" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</body>




