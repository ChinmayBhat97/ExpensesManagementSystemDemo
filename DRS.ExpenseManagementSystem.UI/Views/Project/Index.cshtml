@model IEnumerable<DRS.ExpenseManagementSystem.UI.Models.ProjectViewModel>
<head>
    @{
        ViewData["Title"] = "Index";
    }

    <style>
        td {
            border: 1px solid #000033;
            text-align: left;
            padding: 2px;
            padding-left: 30px;
        }

        th {
            border: 1px solid #000033;
            text-align: center;
            padding: 2px;
            color: whitesmoke;
        }

        tr:nth-child(even) {
            background-color: #e6f2ff;
        }

        /* Set the serial number counter to 0 */
        #table {
            counter-reset: serial-number;
        }

            /* Increment the serial number counter */
            /* Display the counter */
            #table td:first-child:before {
                counter-increment: serial-number;
                content: counter(serial-number);
            }
    </style>
</head>

<body >
    <div style="padding-left:225px;padding-bottom:80px;">
        <h4 style="color:#000099;text-align:center;"><u> <b>Projects List </b></u></h4>

        <div style="padding-left:740px;">
            <a asp-action="CreateProject"  class="btn btn-success">Add New Project</a>

        </div>
        <br />

        <table class="table" id="table" style="font-family: arial, sans-serif;border-collapse:collapse;width:100%;padding-top:15px;font-size:16px">
            <thead style="vertical-align:middle;">
            
                <tr style="vertical-align:central;">
                    <th style="background-color: #0000b3;vertical-align:central;">
                        Sl.No
                    </th>
                    @*@Html.DisplayNameFor(model => model.Id)*@
                    @*<th style="background-color: #0000b3;">
                       Project ID
                    </th>*@
                    <th style="background-color: #0000b3;vertical-align:central;">
                        Project Title
                    </th>
                   
                  
                   @* <th style="background-color: #0000b3;vertical-align:central;">
                      Project Description
                    </th>*@
                    <th style="background-color: #0000b3;vertical-align:central;">
                        Client Name
                    </th>
                    <th style="background-color: #0000b3;vertical-align:central;">
                      Project Start Date
                    </th>
                    <th style="background-color: #0000b3;vertical-align:central;">
                      Project End Date
                    </th>

                   
                    <th style="background-color: #0000b3;vertical-align:central;">
                        Manager / Project Incharge
                    </th>
                    <th style="background-color: #0000b3;vertical-align:central;">
                        Department
                    </th>
                    <th style="background-color: #0000b3;vertical-align:central;">Action </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr style="vertical-align:central;text-align:center;">
                        <td style="padding-left:25px;vertical-align:central;">
                            &nbsp;
                        </td>
                        <td style="vertical-align:central;text-align:center;">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                       @* <td style="padding-left:10px;text-align:center;">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>*@
                        <td style="vertical-align:central;text-align:center;">
                            @Html.DisplayFor(modelItem => item.Client)
                        </td>
                        <td style="vertical-align:central;text-align:center;">
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td style="vertical-align:central;text-align:center;">
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>

                        <td style="vertical-align:central;text-align:center;">
                            @Html.DisplayFor(modelItem => item.Emp.FirstName)
                        </td>
                        <td style="vertical-align:central;text-align:center;">
                            @Html.DisplayFor(modelItem => item.Emp.DeptId)
                        </td>
                        @*index*@

                        @*  <td style="padding-left:10px;vertical-align:central;">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>*@
                        
                        <td style="padding-left:10px;">
                            <a asp-action="EditProject" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a> 
                            <a asp-action="DetailsByProjectID" asp-route-id="@item.Id"><i class="fa fa-eye" aria-hidden="true"></i></a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

