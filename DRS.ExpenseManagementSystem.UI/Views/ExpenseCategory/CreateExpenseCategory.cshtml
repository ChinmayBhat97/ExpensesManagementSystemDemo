@model DRS.ExpenseManagementSystem.UI.Models.ExpenseCategory
@{
    ViewData["Title"] = "Create";
}



<body style="overflow:hidden;">
    
    <div style="padding-left:250px;padding-bottom:80px;">
        <h3>  <u> <b> Create New Expense Category </b> </u></h3>
        <div class="row">
            <div class="col-md-6">
                <form asp-route="/ExpenseCategory/CreateExpenseCategory">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                      <b>  <label asp-for="Name" class="control-label"></label><span style="color:red;">*</span></b>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group" style="padding-left:250px;">
                        <a asp-action="Index" class="btn  btn btn-secondary">Back to List</a>
                        <input type="submit" value="Save" class="btn btn-success" />

                    </div>
                </form>
            </div>
        </div>

    </div>

   
    
</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
