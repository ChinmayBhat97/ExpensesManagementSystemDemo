@model DRS.ExpenseManagementSystem.UI.Models.User

@{
    Layout = null;
}
<html>


<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>

<body style="background-color:#e0ebeb;padding-top:100px;padding-left:450px;">

    <h3 style="color:navy"><u><b> Expenses Management System </b> </u></h3>
    <br />
    @*<h6>Enter your credentials here to login for application!</h6>*@

<div class="page-wrapper pt-0">
   
    <div class="login-wrapper">
        <div class="container-fluid">
            

            <form method="post" asp-action="Login">
                <div class="row" style="padding-top:50px" >
                    <div class="col-lg-5">
                        <div class="form-fields mb-3">

                              
                                <b> <label> Employee Code </label> </b> <span style="color:red;">*</span>
                            <input type="text" class="form-control f-15 fw-500" id="user-name" asp-for="EmployeeCode" placeholder="User Name" required/>
                            <span asp-validation-for="EmployeeCode" class="text-danger"></span>
                        </div>
                        <div class="form-fields mb-3">
                                <b> <label> Password </label> </b> <span style="color:red;">*</span>
                                <input type="password" class="form-control f-15 fw-500" id="password" asp-for="Password" placeholder="Password" id="id_password"  required/>
                                @*<span style="margin-left: 10px;">  <i class="far fa-eye" id="togglePassword"></i> Show Password</span>*@
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-fields" style="padding-left:235px;">
                                <a><input id="Submit" type="submit" class="btn btn-outline-primary" value="Login" /><i class="fa fa-sign-in" aria-hidden="true"></i> </a>
                        </div>
                            @if (ViewData["Validate message"]!=null)
                            {
                                <label>@ViewData["Validate message"]</label>
                            }
                    </div>
@*
                    <div>
                            <h6>@TempData["Message"]</h6>
                            <h6>@TempData["MessageInst"]</h6>

                            <h6>@TempData["MessageInfo"]</h6>
                            <h6>@TempData["Check"]</h6>
                    </div>*@
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

