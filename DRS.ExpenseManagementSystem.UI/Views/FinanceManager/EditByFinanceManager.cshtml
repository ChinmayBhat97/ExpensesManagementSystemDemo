    function InitializeKeyUp() {
        //iterate through each textboxes and add keyup
        //handler to trigger sum event
        $(".txt").each(function () {
            $(this).keyup(function () {
                calculateSum();
            });
        });
    }

    function calculateSum() {
        console.log("Hello");
        var sum = 0;
        $(".txt").each(function () {
            var isApproved = $(this).closest("tr").find("select[name$='IsApproved']").val();
            var value = parseFloat($(this).val());
            if (isApproved === "1" && !isNaN(value)) {
                sum += value;
            }
        });
        $("#ttlamnt").val(sum.toFixed(2));
    }

