@model DRS.ExpenseManagementSystem.UI.Models.ExpenseClaimViewModel
<html>
<head>
    @{
        ViewData["Title"] = "Edit by Finance";
    }


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <style>

        td {
            border: 1px solid #000033;
            text-align: left;
            /* padding: 2px;*/
        }

        th {
            border: 1px solid #000033;
            text-align: center;
            /* padding: 2px;*/
            color: whitesmoke;
        }



        tr:nth-child(even) {
            background-color: #e6f2ff;
        }

        /* Set the serial number counter to 0 */
        #Expense {
            counter-reset: serial-number;
        }

            /* Increment the serial number counter */
            /* Display the counter */
            #Expense td:first-child:before {
                counter-increment: serial-number;
                content: counter(serial-number);
            }

    </style>
</head>
<body>
    <h4 style="padding-left:230px;color:navy;"><u><b>Edit Claim</b></u></h4>
    <br />
    <div class="row">
        <div class="col-md-12" style="padding-left:250px;">
            <form asp-route="/ExpenseClaim/EditByFinanceManager/@Model.Id" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Id" class="form-control" style="display:none" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="EmpId" class="form-label input-lable"><b>Employee Code:</b></label>
                            <select asp-for="EmpId" asp-items="ViewBag.userList" class="form-control Selectinput" id="Employee" readonly>
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="DeptId" class="form-label input-lable"><b>Department</b></label>
                            <select asp-for="DeptId" asp-items="ViewBag.departmentList" class="form-control Selectinput" id="Department" readonly>
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                    </div>
                    
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label><b>Expense Start Date</b></label>
                            <input type="date" asp-for="StartDate" class="form-control" readonly />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label><b>Expense End Date</b></label>
                            <input type="date" asp-for="EndDate" class="form-control" readonly />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label><b>Claim Date</b></label>
                            <input type="date" asp-for="ClaimRequestDate" class="form-control" readonly />
                            <span asp-validation-for="ClaimRequestDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="ProjectId" class="form-label input-lable"><b>Project Title</b></label>
                            <select asp-for="ProjectId" asp-items="ViewBag.projectList" class="form-control Selectinput" id="Project" readonly>
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label><b>Total Expenditure</b></label>
                            <input asp-for="TotalAmount" class="form-control" id="ttlamnt" readonly />
                            @*<span class="form-control" id="ttlamnt"></span>*@
                            <span asp-validation-for="TotalAmount" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label><b>Date of Approval</b></label>
                            <input type="date" asp-for="ManagerApprovedOn" class="form-control" readonly />
                            <span asp-validation-for="ManagerApprovedOn" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Status" class="form-label input-lable"><b>Claim Status</b><span style="color:red;">*</span></label>
                            <select asp-for="Status" asp-items="ViewBag.statusList" class="form-control Selectinput" id="Status">
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label><b>Finance Manager Approved On</b></label>
                            <input type="date" asp-for="FinanceManagerApprovedOn" class="form-control" readonly />
                            <span asp-validation-for="FinanceManagerApprovedOn" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label><b>Manager Remarks</b></label>
                    <input asp-for="ManagerRemarks" class="form-control" readonly />
                    <span asp-validation-for="ManagerRemarks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label><b>Finance Manager Remarks</b></label>
                    <input asp-for="FinanceManagerRemarks" class="form-control" />
                    <span asp-validation-for="FinanceManagerRemarks" class="text-danger"></span>
                </div>
               <br />
                <hr />

