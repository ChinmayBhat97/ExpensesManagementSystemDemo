@model IEnumerable<DRS.ExpenseManagementSystem.UI.Models.ExpenseClaimViewModel>

<head>
    @{
        ViewData["Title"] = "Index";
    }
    <style>
        td {
            border: 1px solid #000033;
            text-align: left;
            padding: 2px;
            padding-left: 30px;
        }

        th {
            border: 1px solid #000033;
            text-align: center;
            padding: 2px;
            color: whitesmoke;
        }

        tr:nth-child(even) {
            background-color: #e6f2ff;
        }
    </style>
</head>


<div style="padding-left:200px;">
    <h4 style="color:navy"> <u> <b> Approved Claims Lists </b>  </u> </h4>
    <div style="padding-left:800px;">
        <a asp-action="Create" type="button" class="btn btn-info">Create New</a>
    </div>
    <div style="padding-top:10px;">
        <table class="table" style="font-family: arial, sans-serif;border-collapse:collapse;width: 100%;">
            <thead>
                <tr>
                    <th style="background-color: #0000b3;">
                        Employee ID
                    </th>
                    <th style="background-color: #0000b3;">
                        Project
                    </th>
                    <th style="background-color: #0000b3;">
                        Department
                    </th>
                    <th style="background-color: #0000b3;">
                        Claim Request Date
                    </th>
                    <th style="background-color: #0000b3;">
                        Amount
                    </th>
                    <th style="background-color: #0000b3;">
                        Status
                    </th>
                    <th style="background-color: #0000b3;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-left:30px;">
                            @Html.DisplayFor(modelItem => item.EmpId)
                        </td>
                        <td style="padding-left:30px;">
                            @Html.DisplayFor(modelItem => item.Project.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dept.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClaimRequestDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatusNavigation.Name)
                        <td>
                            <a asp-action="EditByFinanceManager" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a asp-action="DetailsByClaimID" asp-route-id="@item.Id"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                @* <a asp-action="AddExpenditures" asp-route-id="@item.Id"><i class="fa fa-plus" aria-hidden="true"></i></a>*@
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
